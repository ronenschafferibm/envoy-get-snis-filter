          },
          {
            "filter_chain_match": {
              "server_names": "*.cnn.com"
            },
            "filters": [
              {
                "name": "GetSNIFilter",
                "config": null
              },
              {
                "name": "envoy.tcp_proxy",
                "config": {
                  "deprecated_v1": true,
                  "value": {
                    "route_config": {
                      "routes": [
                        {
                          "cluster": "cnn"
                        }
                      ]
                    },
                    "stat_prefix": "cnn"
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "address": {
          "socket_address": {
            "address": "0.0.0.0",
            "port_value": 15001
          }
        },
